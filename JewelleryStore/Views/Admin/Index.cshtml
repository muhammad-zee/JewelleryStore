
<div class="az-content az-content-mail">
    <div class="container">
        <div class="content-wrapper w-100">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="nav-scroller pb-4 border-bottom">
                                <ul class="nav nav-tabs tickets-tab-switch" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link rounded active show" id="open-tab" data-toggle="tab" href="#tab_Products" role="tab" aria-controls="open-tickets" aria-selected="true">Products</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link rounded" id="pending-tab" data-toggle="tab" href="#tab_ProductTypes" role="tab" aria-controls="pending-tickets" aria-selected="false">Product Types</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link rounded" id="onhold-tab" data-toggle="tab" href="#tab_ProductCategories" role="tab" aria-controls="onhold-tickets" aria-selected="false">
                                            Product Categories @*<div class="badge">29 </div>*@
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="tab-content border-0 tab-content-basic mg-t-20">
                                <div class="tab-pane fade active show" id="tab_Products" role="tabpanel" aria-labelledby="open-tickets">
                                    @*<div class="tickets-date-group"><i class="typcn icon typcn-calendar-outline"></i>Tuesday, 21 May 2019 </div>*@
                                    @*@await Html.PartialAsync("Products_PartialView")\*@
                                    <div class="">
                                        <a href="#mdl_addNewProduct" class="modal-effect btn btn-outline-indigo btn-with-icon btn-block" data-toggle="modal" data-effect="effect-scale">
                                            <i class="typcn typcn-plus"></i>
                                            Add Product
                                        </a>
                                    </div>
                                    <div id="Products_PartialView" class="mg-t-20"></div>

                                </div>
                                <div class="tab-pane fade" id="tab_ProductTypes" role="tabpanel" aria-labelledby="pending-tickets">
                                    @*<div class="tickets-date-group"><i class="typcn icon typcn-calendar-outline"></i>Tuesday, 21 May 2019 </div>*@
                                    @await Html.PartialAsync("ProductTypes_PartialView")


                                </div>
                                <div class="tab-pane fade" id="tab_ProductCategories" role="tabpanel" aria-labelledby="onhold-tickets">
                                    @await Html.PartialAsync("ProductCategories_PartielView")

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="mdl_addNewProduct" class="modal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body pd-20 pd-sm-40">
                <button type="button" class="close pos-absolute t-15 r-20 tx-26" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>

                <h5 class="modal-title mg-b-20">Create New Product</h5>
                @*<p class="mg-b-20">Let's get you all setup so you can begin using our app.</p>*@

            <div class="">
                <div class="mg-b-20 row">
                    <div class="form-group col-md-12">
                        <label class="form-label">Name: <span class="tx-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Product Name">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="form-label">Category: <span class="tx-danger">*</span></label>
                        <select class="form-control" id="ddlProductCategory">
                            <option value="">Product Category</option>
                            @foreach (ProductCategoryModel Prod_Cat in ViewBag.ProductCategoryModel)
                            {
                                <option value="@Prod_Cat.Id">@Prod_Cat.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="form-label">Type: <span class="tx-danger">*</span></label>
                        <select class="form-control" id="ddlProductType">
                            <option value="">Product Type</option>
                            @foreach (ProductTypeModel Prod_Type in ViewBag.ProductTypeModel)
                            {
                                <option value="@Prod_Type.Id">@Prod_Type.Name</option>
                            }
                        </select>
                    </div>
                </div><!-- d-flex -->
                @*<button type="submit" class="btn btn-az-primary pd-x-20">Validate Form</button>*@
                <button class="btn btn-indigo btn-block">Continue</button>
            </div>
             
            </div><!-- modal-body -->
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div>






<script src='@Href("~/js/custom/Admin.js")'></script>
